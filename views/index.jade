doctype html
html
    head
        meta(charset="utf-8")
        title Web2.0 SignIn
        link(rel="stylesheet" href="./stylesheets/signin.css")
        link(rel="stylesheet" href="./stylesheets/index.css")
        script(type="text/javascript" src="./javascripts/lib/crypto-core.js")
        script(type="text/javascript" src="./javascripts/lib/crypto-md5.js")
        script(type="text/javascript" src="./javascripts/lib/jquery.js")
        script(type="text/javascript" src="./javascripts/login.js")
    body
        div#container
            h1 登录
            form#login(action="/api/login" method="POST" enctype="application/json")
                input(type="text" name="name" placeholder="用户名" maxlength="18")
                input(type="password" name="password" placeholder="密码" autocomplete="off" maxlength="12")
                input.button(type="submit" value="登录")
            a.button(href="/regist") 注册
