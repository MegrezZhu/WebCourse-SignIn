doctype html
html
    head
        meta(charset="utf-8")
        title 注册
        link(rel="stylesheet" href="./bower_components/semantic/dist/semantic.css")
        link(rel="stylesheet" href="./stylesheets/signin.css")
        link(rel="stylesheet" href="./stylesheets/regist.css")
        script(type="text/javascript" src="./bower_components/jquery/dist/jquery.min.js")
        script(type="text/javascript" src="./bower_components/lodash/dist/lodash.min.js")
        script(type="text/javascript" src="./bower_components/semantic/dist/semantic.js")
        script(type="text/javascript" src="./bower_components/cryptojs/lib/Crypto.js")
        script(type="text/javascript" src="./bower_components/cryptojs/lib/MD5.js")
        script(type="text/javascript" src="./javascripts/inputCheck.js")
        script(type="text/javascript" src="./javascripts/regist.js")
    body
        div.ui.middle.aligned.center.aligned.grid
            div.column.center.aligned
                h2.ui.center.aligned.icon.header
                    i.users.grey.icon
                form.ui.form#regist(method="POST" enctype="application/json")
                    div.ui.large.raised.clearing.segment
                        div.ui.divider
                        div.ui.field
                            div.ui.left.icon.huge.input
                                i.user.icon
                                input(type="text" name="name" placeholder="用户名" maxlength="18")
                                div.error-info.to-middle
                        div.ui.field
                            div.ui.left.icon.huge.input
                                i.lock.icon
                                input(type="password" name="password" placeholder="密码" maxlength="18")
                                div.error-info.to-middle
                        div.ui.field
                            div.ui.left.icon.huge.input
                                i.lock.icon
                                input(type="password" name="password2" placeholder="重复密码" maxlength="18")
                                div.error-info.to-middle
                        div.ui.field
                            div.ui.left.icon.huge.input
                                i.book.icon
                                input(type="text" name="id" placeholder="学号" maxlength="18")
                                div.error-info.to-middle
                        div.ui.field
                            div.ui.left.icon.huge.input
                                i.tablet.icon
                                input(type="text" name="phone" placeholder="电话" maxlength="18")
                                div.error-info.to-middle
                        div.ui.field
                            div.ui.left.icon.huge.input
                                i.mail.icon
                                input(type="text" name="mail" placeholder="邮箱" maxlength="18")
                                div.error-info.to-middle
                        div.ui.divider
                        div.ui.field
                            input.ui.huge.blue.fluid.button.disabled#regist-button(type="submit" value="注册")
                        div.ui.field
                            input.ui.huge.teal.fluid.button#reset-button(type="reset" value="重置")
                        a.ui.basic.right.floated.icon.button(href="/")
                            i.ui.large.reply.icon